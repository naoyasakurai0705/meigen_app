.container-fluid
  .row
    .col-md-8.offset-md-2.mt-5
      .border.p-5.border-dark
        .form-group
          %label{for: "exampleFormControlTextarea1"} シェアしたい名言
          %textarea.form-control{rows: "5", form: "create-image", name: "sentence"}
        %form.pt-4
          %p 本を検索する
          .border.p-3
            .form-group
              %label{for: "exampleFormControlInput1"}本のタイトル
              %input#title.form-control{placeholder: "", type: "*"}
            .form-group
              %label{for: "exampleFormControlInput1"}著者
              %input#author.form-control{placeholder: "", type: "*"}
          %button.btn.btn-primary.mt-4{type: "button", onClick: 'loadText()'} 本を検索
        .form-group.pt-5
          %label{for: "exampleFormControlTextarea1"} 検索結果
          %input.form-control{placeholder: "騎士団長殺し", type: "text", form: "create-image", name: "book-info"}
      = form_tag "/meigens/new", method: "GET", id: "create-image", class: "mt-3" do
        = submit_tag '画像生成', class: 'btn btn-primary'

- if user_signed_in?
  = link_to "ログアウト" ,destroy_user_session_path,method: :delete
  %p ログイン中
  #{current_user.name}
- else
  = link_to "twitterでサインインする" ,user_twitter_omniauth_authorize_path


